[module/sep]
type = custom/text
content = "--"

content-background = ${color.BG}
content-foreground = ${color.BG}

;; Dots

[module/dot]
type = custom/text
content = 
content-foreground = ${color.BGL}
content-padding = 0
content-font = 4

[module/dot-alt]
inherit = module/dot
content-foreground = ${color.BLUEGRAY}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

